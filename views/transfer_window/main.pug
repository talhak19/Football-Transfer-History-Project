block content
        .row 
            .col-md-3 
                include ../includes/menu.pug

            .col-md-9
                include ../includes/slider.pug

                .row
                    if players.length > 0
                        each player in players
                            +createPlayer(player)
                    else
                        h1 No Player in Transfer List