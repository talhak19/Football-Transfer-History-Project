extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/register" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row
            label(for="name").col-sm-2.col-form-label Name
            .col-sm-5
                input.form-control#name(type="text" name="name")  

        .form-group.row
            label(for="phone").col-sm-2.col-form-label Tel No
            .col-sm-5
                input.form-control#tel(type="tel" name="phone" placeholder="530-000-0000" pattern="[0-9]{3}[0-9]{3}[0-9]{4}")  

        .form-group.row
            label(for="team").col-sm-2.col-form-label Team
            .col-sm-5
                select.form-control#team(name="team" required)
                    each team in teams
                        option(value=team._id)=team.name
        
        .form-group.row
            label(for="inCharge").col-sm-2.col-form-label In Charge
            .col-sm-5.d-flex.align-items-center
                input.form-check-input(type="checkbox" name="inCharge" value="true")
                label.form-check-label(for="inCharge") Check this box if you are in charge



        .form-group.row
            label(for="email").col-sm-2.col-form-label Email
            .col-sm-5
                input.form-control#email(type="text" name="email")    

        .form-group.row
            label(for="password").col-sm-2.col-form-label Password
            .col-sm-5
                input.form-control#password(type="password" name="password")  
                
        .form-group.row
            .col-sm-5.offset-sm-2
                input(type="submit" value="Submit" style="color:white; background-color:Salmon;").btn
           
